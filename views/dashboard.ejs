<% include header.ejs %>

    <div class="bs-example">
        <h2>Send files:</h2>
        <input type="text" name="typeahead" class="typeahead tt-query" autocomplete="off" spellcheck="false" placeholder="username...">
        <image id="img" />
        <form id="myForm" onsubmit="yourFunction()" method="post" enctype="multipart/form-data">
            <input id="file" type="file" name="image" id="player-img" required>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
        
    </div>

    <div class="table-wrapper">
    <h2>Files received</h2>
        <% if (files.length > 0) {%>
            <table class="table table-dark">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Sender</th>
                        <th scope="col">Image</th>
                        <th scope="col">Download</th>
                    </tr>
                </thead>
                <tbody>
                    <% files.forEach((file, index) => { %>
                        <tr>
                            <th scope="row"><%= file.id %></th>
                            <td><%= file.sender %></td>
                            <td><%= file.image %></td>
                            <td>
                                <button type="submit" class="btn btn-primary">Send</button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No new files.</p>
        <% } %>
    </div>
</div>
<script src="script.js"></script>
</body>
</html>

    
