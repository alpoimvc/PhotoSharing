<% include header.ejs %>

    <div class="bs-example">
        <h2>Send file:</h2>
        <input type="text" name="typeahead" class="typeahead tt-query" autocomplete="off" spellcheck="false" placeholder="username...">
        <image id="img" />
        <form id="myForm" onsubmit="yourFunction()" method="post" enctype="multipart/form-data">
            <input id="file" type="file" name="image" required>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
    <div class="bs-example">
        <h2>Upload file:</h2>
        <form id="myForm" action="/upload" method="post" enctype="multipart/form-data">
            <input id="file2" type="file" name="image"required>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>
    </div>

    <div class="table-wrapper">
    <h2>Files received</h2>
        <% if (files.length > 0) {%>
            <table class="table table-dark">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Sender</th>
                        <th scope="col">Image</th>
                        <th scope="col">Download</th>
                    </tr>
                </thead>
                <tbody>
                    <% files.forEach((file, index) => { %>
                        <% if(file.receiver == session.username){ %>
                            <tr>
                                <th scope="row"><%= file.id %></th>
                                <td><%= file.sender %></td>
                                <td><%= file.image %></td>
                                <td>
                                    <a href="/download/<%= file.image %>" class="button">Download</a>
                                </td>
                            </tr>
                        <% } %>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No new files.</p>
        <% } %>
    </div>
</div>
<script src="script.js"></script>
</body>
</html>

    
